<style>
  textarea { height:300px } .add__button{ width: 100%;}
</style>

<div class="card card-body">
  <h3>Tạo bài viết mới</h3>
  <form action="/posts" method="post">
    <div class="form-group">
      <label for="title">Tiêu đề</label>
      <input
        type="text"
        class="form-control"
        name="title"
        placeholder="..."
        required
        value="{{title}}"
      />
    </div>
    <div class="form-group">
      <label for="text">Nội dung</label>
      <textarea name="text" class="form-control" required>{{text}}</textarea>
    </div>

    <button class="btn btn-dark add__button" type="submit">Tạo ghi chú</button>
  </form>
</div>